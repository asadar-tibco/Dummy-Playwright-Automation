{
  "name": "dummy-playwright-automation",
  "version": "1.0.0",
  "description": "Playwright automation test suite for TeamCity integration",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:smoke": "npx playwright test tests/smoke",
    "test:bat": "npx playwright test tests/bat",
    "test:uat": "npx playwright test tests/uat",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "install:browsers": "npx playwright install",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "allure:serve": "npx allure serve allure-results",
    "test:allure": "npm run test && npm run allure:generate && npm run allure:open",
    "test:teamcity": "npm run test && npm run allure:generate",
    "test:ci": "npm run test && npm run allure:generate"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "teamcity"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3"
  }
}
